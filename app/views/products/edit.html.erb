<div class="row">
  <div class="col-md-4">
<%= bootstrap_form_for :product, url: products_path(@product), method: :put do |f| %>
   
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@product.errors.count, "error") %> prohibited
        this product from being saved:
      </h2>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.text_field :name %>
  </div>  

   <div class="field">
    <%= f.text_area :description %>
  </div>
  
 <p>
    <%= f.select :size_id, options_for_select(@sizes.collect{ |s| [s.name, s.id] }) %>
  </p>
  
  <p>
    <%= f.select :color_id, options_for_select(@colors.collect{ |c| [c.name, c.id] }) %>
  </p>
<br>
  <div class="actions">
    <%= f.submit "Edit", class: "btn btn-success" %>
  </div>
  <% end %>
</div>
</div>

  <%= link_to 'Back', products_path %>