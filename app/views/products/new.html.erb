<div class="row">
  <div class="col-md-4">
<%= bootstrap_form_for :product, url: products_path do |f| %>
   
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@product.errors.count, "error") %> prohibited
        this product from being saved:
      </h2>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
  	<%= f.text_field :name %>
  </p>  

  <p>
  	<%= f.text_area :description %>
  </p>  

  <p>
  	<%= f.select :size_id, options_for_select(@sizes.collect{ |s| [s.name, s.id] }) %>
  </p>
  
  <p>
  	<%= f.select :color_id, options_for_select(@colors.collect{ |c| [c.name, c.id] }) %>
  </p>


  <p>
 	<%= f.submit "Create", class: "btn btn-success" %>
  </p>

  <% end %>
  <%= link_to 'Back', products_path %>
</div>
</div>