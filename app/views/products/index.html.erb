<div class="row">
  <div class="col-md-6">
<h1>List registered products</h1>
<hr>
<table class="table">
  <tr>
    <th>Product</th>
    <th>Color</th>
    <th>Size</th>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.color.name %></td>
      <td><%= product.size.name %></td>
      <td><%= button_to 'Show', product_path(product) %></td>
      <td><%= button_to 'Edit', edit_product_path(product) %></td>
      <td><%= button_to 'Destroy', product_path(product),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
</div>
</div>